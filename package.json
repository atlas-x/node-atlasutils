{
  "name": "atlasutils",
  "version": "1.4",
  "description": "Modules for use in Atlas node projects",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/atlas-x/node-atlasutils",
  "author": "Atlas Solutions <jon@atlas-x.com>",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "^4.4.0",
    "@slack/web-api": "^5.0.1",
    "@types/winston": "^2.3.5",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "split": "^1.0.1",
    "winston": "^2.4.4",
    "winston-daily-rotate-file": "3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "build": "tsc",
    "start": "tsc -w",
    "prepublish": "npm run build"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "clearMocks": true,
    "testPathIgnorePatterns": [
      "\\node_modules\\",
      "\\dist\\"
    ],
    "testRegex": "\\.(test|spec)\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  }
}
